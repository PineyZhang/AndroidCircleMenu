<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.view.CustomFrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@mipmap/img_home_head_bg"
        android:clipChildren="false">

        <com.zhy.view.UECircleMenuLayout
            android:id="@+id/id_menulayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@id/id_circle_menu_item_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="90.0dip"
                    android:layout_height="90.0dip"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/ic_icon_inner" />

                <ImageView
                    android:id="@+id/circle"
                    android:layout_width="120.0dip"
                    android:layout_height="120.0dip"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/ic_icon_out" />
            </RelativeLayout>
        </com.zhy.view.UECircleMenuLayout>

    </com.zhy.view.CustomFrameLayout>

</LinearLayout>